{
  "compilerOptions": {
    "lib": ["ES2021", "DOM"],
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./build",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "app.ts",
    "src/**/*.ts",
    "package.json",
    "package-lock.json",
    "uploads/**/*",
    "src/data-source.ts",
    "src/**/*"
  ]
}